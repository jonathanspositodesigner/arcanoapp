# index.html - sempre revalidar (iOS PWA cache fix)
/index.html
  Cache-Control: no-cache, no-store, must-revalidate

# Service Worker - sempre revalidar
/sw.js
  Cache-Control: no-cache, must-revalidate

# Cache para assets com hash do Vite - imutável
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache para imagens na pasta public/images - 30 dias
/images/*
  Cache-Control: public, max-age=2592000

# Cache específico para imagens combo - 30 dias
/images/combo/*
  Cache-Control: public, max-age=2592000

# Cache para arquivos webp - 30 dias
/*.webp
  Cache-Control: public, max-age=2592000

# Cache para ícones e favicons - 30 dias
/*.ico
  Cache-Control: public, max-age=2592000

/*.png
  Cache-Control: public, max-age=2592000

# Cache para vídeos - 7 dias
/videos/*
  Cache-Control: public, max-age=604800
